<!-- Estilos css para cosas concretas -->
<style>
  .caja {
    /* position: fixed; /* lo fija en la pantalla */ */
    bottom: 0; /* al fondo */
    left: 0; /* alineado al borde izquierdo */
    width: 100%; /* ocupa todo el ancho */
  }

  .contenedor {
    background: var(--navfooter);
  transition: background-color 0.3s ease, color 0.3s ease;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 500px;
    /* background: #f2f2f2; */
  }

  /* Mitad izquirda footer */
  .contenedor div:first-child {
    padding: 8%;
  }

  /* Mitad derecha footer */
  .contenedor div:nth-child(2) {
    display: grid;
    padding: 8% 0;
    grid-template-columns: 1fr 1fr;
    margin: 0 auto;
  }

  /* Redes sociales */
  .social-media {
    /* background: #f2f2f2; */
    background: var(--navfooter);
  transition: background-color 0.3s ease, color 0.3s ease;
    width: 100%;
    margin: 0 auto;
  }

  .social-media div {
    display: flex;
    margin: 0 auto;
    padding: 2%;
    width: 92%;
    border-top: 1px solid var(--titles);
  }

  .social-icons {
    gap: 15px;
    margin: 0 auto;
  }
</style>
